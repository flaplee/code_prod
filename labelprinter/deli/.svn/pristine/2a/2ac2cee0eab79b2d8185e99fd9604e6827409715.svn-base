            });

            //创建一个编辑器
            var editIndex = layedit.build('LAY_demo_editor');


            //监听提交
            form.on('submit(demo1)', function(data){
                layer.alert(JSON.stringify(data.field), {
                    title: '最终的提交信息'
                })
                return false;
            });




        });
    </script>
    <script>
        highlight_subnav('menu_client','menu_version_list');
        function test(){
             $(".fancybox-piclayer").fancybox({
                     openEffect  : 'none',
                     closeEffect	: 'none',
                     helpers : {
                             title : {
                                     type : 'over'
                             }
                     }
             });
        } 
    </script>
</block>
