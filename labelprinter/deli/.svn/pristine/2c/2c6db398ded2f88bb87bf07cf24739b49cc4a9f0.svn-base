        trigger: 'item',
        formatter: "{a} <br/>{b} : {c} ({d}%)"
    },
    legend: {
        orient: 'vertical',
        left: 'left',
        data: ['测试1','测试2','测试3','测试4','测试5']
    },
    series : [
        {
            name: '饼图',
            type: 'pie',
